{
  "name": "bio-mage",
  "version": "1.0.0",
  "description": "A game where magic can be mapped and understood via biology",
  "main": "dist/index.js",
  "type": "module",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run --exclude '**/practical.test.ts'",
    "test:ui": "vitest --ui --exclude '**/practical.test.ts'",
    "test:run": "vitest run --exclude '**/practical.test.ts'",
    "test:coverage": "vitest run --coverage --exclude '**/practical.test.ts'",
    "test:practical": "vitest run --reporter=verbose src/tests/magic-simulator/practical.test.ts",
    "test:all": "vitest run",
    "dev": "tsc --watch",
    "example": "npm run build && node dist/examples/usage-examples.js"
  },
  "keywords": [
    "game",
    "magic",
    "simulation",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@types/node-fetch": "^2.6.13",
    "dotenv": "^17.2.1",
    "node-fetch": "^3.3.2"
  }
}
